{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2016",
		// "module": "NodeNext",
		"module": "ESNext",
		"rootDir": "./src",
		// "moduleResolution": "NodeNext",
		"moduleResolution": "Bundler",
		"baseUrl": "./",
		"sourceMap": true,
		"outDir": "./dist",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"newLine": "lf",

		/* Bundler mode */
		"resolveJsonModule": true,
		"isolatedModules": true,
		// "noEmit": true,

		/* Linting */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"checkJs": true,
		"allowJs": true,

		// output
		"declaration": true,
		// "declarationMap": true,
	},
	"exclude": ["./dist", "./node_modules", "./__tests__", "./coverage", "*.js"]
}
